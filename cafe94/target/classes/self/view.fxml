<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?xml-stylesheet type="text/css" href="menucss.css" ?>

<BorderPane prefHeight="495.0" prefWidth="701.0" stylesheets="@menucss.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="self.App">
   <center>
      <VBox alignment="CENTER" spacing="100.0" VBox.vgrow="ALWAYS">
         <children>
            <!-- Staff Button -->
            <Button fx:id="staffButton" mnemonicParsing="false" onAction="#switchToStaff" prefHeight="50.0" prefWidth="150.0" styleClass="main-button" text="Staff">
               <font>
                  <Font name="Arial" size="18.0" />
               </font>
            </Button>
            <Button fx:id="customerButton" mnemonicParsing="false" onAction="#switchToCustomer" prefHeight="50.0" prefWidth="150.0" styleClass="main-button" text="Customer">
               <font>
                  <Font name="Arial" size="18.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </center>
   <left>
      <StackPane fx:id="homeStackPane" prefHeight="495.0" prefWidth="376.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <StackPane prefHeight="495.0" prefWidth="60.0" BorderPane.alignment="CENTER" />
   </right>
</BorderPane>
